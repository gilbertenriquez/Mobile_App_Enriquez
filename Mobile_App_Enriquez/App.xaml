            <Color x:Key="ButtonColor">#5920d5</Color>
            
            <Color x:Key="TextColorGary">Gray</Color>
            <Color x:Key="PlaceHolder">Black</Color>

            <Color x:Key="PriceColor">red</Color>
            <Color x:Key="TextColorGray">Gray</Color>
            <Color x:Key="PlaceHolderColor">Gray</Color>
            <Color x:Key="Gradient1">#1E1F1C</Color>
            <Color x:Key="Gradient2">#5920D5</Color>
            <Color x:Key="ShadowDark">Black</Color>
            <Color x:Key="CollectionViewSelectionColor">#292821</Color>
